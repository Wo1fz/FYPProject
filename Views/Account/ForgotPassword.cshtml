@model FYPProject.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
}

<head>
    <style>
        .container {
            width: 100%;
        }

        .panel {
            min-width: 20%;
            max-width: 30%;
            margin: 0 auto;
            box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24);
        }

        .form-control {
            display: inline-block;
            text-align: left;
            width: 300px;
            font-size: 15px;
            height: 35px;
            border-radius: 5px;
            border-color: #e0e0e0;
            padding-left: 7px;
            background-color: transparent;
            color: #777;
            vertical-align: middle;
            outline: none;
        }
    </style>
</head>
<body>
    <div class="container">
        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <center><h2>@ViewBag.Title.</h2></center>
            <center><h4>Enter your email.</h4></center>
            <div class="panel panel-default">
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-row form-row-header">
                        @Html.LabelFor(m => m.Email, new { @class = "textbox-header" })
                    </div>
                    <div class="form-row">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                    <div class="form-row" style="padding:10px;">
                        <input type="submit" class="btn btn-default cust-camp-btn" value="Email Link" />
                    </div>
                </div>
            </div>
        }
    </div>
</body>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
