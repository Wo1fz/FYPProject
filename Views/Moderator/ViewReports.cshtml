@model IEnumerable<FYPProject.Models.Reports>

@{
    ViewBag.Title = "ViewReports";
}

<head>
    <style>
        .container {
            width: 100%;
        }

        .panel {
            min-width: 600px;
            max-width: 70%;
            margin: 0 auto;
            box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24);
        }

        .top-form-row {
            padding: 10px 0px 5px 0px;
        }

        .search-div {
            width: 80%;
        }

        .create-div {
            width: 20%;
            text-align: right;
            padding-right: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <center><h2>ViewReports</h2></center>
        <div class="panel panel-default">
            <div class="form-horizontal">
                <div class="form-row">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.CampaignId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ReporterId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Username)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Body)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Reason)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CampaignId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ReporterId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Username)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Body)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Reason)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</body>

