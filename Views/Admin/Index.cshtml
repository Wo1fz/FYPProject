@model IEnumerable<FYPProject.Models.ApplicationUser>
@{
    ViewBag.Title = "Index";
}


<head>
    <style>
        .container {
            width: 100%;
        }

        .panel {
            min-width: 600px;
            max-width: 70%;
            margin: 0 auto;
            box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24);
        }

        .top-form-row {
            padding: 10px 0px 5px 0px;
        }

        .search-div {
            width: 80%;
        }

        .create-div {
            width: 20%;
            text-align: right;
            padding-right: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <center><h2>Admin Control Panel</h2></center>
        <div class="panel panel-default">
            <div class="form-horizontal">
                <div class="form-row top-form-row">
                    <div class="search-div">
                        @using (Html.BeginForm("Index", "Admin", FormMethod.Get))
                        {
                            <span class="cust-search-bar">
                                @Html.TextBox("search")
                            </span>
                            <input type="submit" value="Search" class="btn btn-default cust-camp-btn" />
                        }
                    </div>
                    <div class="create-div">
                        @Html.ActionLink("Create User", "CreateUser", "Admin", new { @class = "btn btn-default cust-camp-btn" })
                    </div>

                </div>
                <div class="form-row">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>
                                    Username
                                </th>
                                <th>
                                    Full Name
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                                <th>
                                    Suspended
                                </th>
                                <th>
                                    Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FullName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @{
                                            if (item.IsEnabled == true)
                                            {
                                                <div class="form-check disabled">
                                                    <input class="form-check-input" type="checkbox" value="" disabled>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="form-check disabled">
                                                    <label class="form-check-label">
                                                        <input class="form-check-input" type="checkbox" checked="" disabled>
                                                    </label>
                                                </div>
                                            }
                                        }
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                                        <!--@Html.ActionLink("Delete", "Delete", new { id = item.Id })-->
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>



